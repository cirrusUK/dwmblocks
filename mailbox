#!/bin/sh

# Displays number of unread mail.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e neomutt ;;
	2) setsid -f mailsync >/dev/null ;;
	3) notify-send "ğŸ“¬ Mail module" "\- Shows unread mail
- Shows ğŸ”ƒ if syncing mail
- Left click opens neomutt
- Middle click syncs mail" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

unread="$(find "${XDG_DATA_HOME:-$HOME}"/mail/Gmail/INBOX/new/* -type f | wc -l 2>/dev/null)"

pidof offlineimap >/dev/null 2>&1 && icon="ğŸ”ƒ"

[ "$unread" = "0" ] && [ "$icon" = "" ] || echo "ğŸ“¬ $unread$icon |"
